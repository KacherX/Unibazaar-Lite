@model Final.Models.BindingModels.ItemFormModel
@{
    ViewData["Title"] = "Yeni İlan Oluştur";
    Layout = "_Layout";
}

<div class="d-flex align-items-center justify-content-center" style="min-height: 80vh; background: linear-gradient(135deg, #e0eafc 0%, #cfdef3 100%);">
    <div class="card shadow p-4" style="min-width: 350px; max-width: 400px;">
        <div class="text-center mb-4">
            <img src="~/logo.png" alt="UniBazaar Lite Logo" style="width:80px; height:auto; margin-bottom: 10px;" />
            <h2 class="mb-2">Yeni İlan Oluştur</h2>
            <p class="text-muted" style="font-size:1rem;">"Eşyalarını paylaş, kampüs hayatını kolaylaştır!"</p>
        </div>
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="Title" >Başlık</label>
                <input asp-for="Title" class="form-control" id="Title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" for="Description">Açıklama</label>
                <textarea asp-for="Description" class="form-control" id="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" for="Price">Fiyat</label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" id="Price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">İlan Fotoğrafı</label>
                <input type="file" name="Photo" accept="image/*" class="form-control" />
            </div>
            <input type="submit" value="İlanı Oluştur" class="btn btn-success w-100" />

        </form>
        <div class="mt-3 text-center">
            <a href="/items" class="btn btn-link">← İlanlara Dön</a>
        </div>
    </div>
</div>