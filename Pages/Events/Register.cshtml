@page "{id:int}"
@model Final.Pages.Events.RegisterModel
@{
    ViewData["Title"] = "Etkinliğe Kayıt";
}

<div class="card">
    <div class="card-body">
        <h2>@Model.Event.Title</h2>
        <p>@Model.Event.Description</p>
        <ul>
            <li><strong>Tarih:</strong> @Model.Event.Date.ToString("dd MMMM yyyy HH:mm")</li>
            <li><strong>Lokasyon:</strong> @Model.Event.Location</li>
            <li><strong>Kontenjan:</strong> @Model.Event.Capacity</li>
        </ul>
        <form method="post">
            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
        </form>
    </div>
</div>