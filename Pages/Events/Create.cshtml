@page
@model Final.Pages.Events.CreateModel
@{
    ViewData["Title"] = "Etkinlik Oluştur";
}

<div class="d-flex align-items-center justify-content-center" style="min-height: 80vh; background: linear-gradient(135deg, #fdf6e3 0%, #f7d9c4 100%);">
    <div class="card shadow p-4" style="min-width: 350px; max-width: 450px;">
        <div class="text-center mb-4">
            <img src="~/logo.png" alt="UniBazaar Lite Logo" style="width:80px; height:auto; margin-bottom: 10px;" />
            <h2 class="mb-2">Yeni Etkinlik Oluştur</h2>
            <p class="text-muted" style="font-size:1rem;">"Birlikte daha renkli bir kampüs hayatı!"</p>
        </div>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
            <div class="mb-3">
                <label class="form-label" asp-for="Event.Title"></label>
                <input asp-for="Event.Title" class="form-control" />
                <span asp-validation-for="Event.Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Event.Description"></label>
                <textarea asp-for="Event.Description" class="form-control"></textarea>
                <span asp-validation-for="Event.Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Event.Date"></label>
                <input asp-for="Event.Date" class="form-control" type="datetime-local" />
                <span asp-validation-for="Event.Date" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Event.Location"></label>
                <input asp-for="Event.Location" class="form-control" />
                <span asp-validation-for="Event.Location" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Event.Capacity"></label>
                <input asp-for="Event.Capacity" class="form-control" type="number" />
                <span asp-validation-for="Event.Capacity" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success w-100">Etkinliği Oluştur</button>
        </form>
        <div class="mt-3 text-center">
            <a asp-page="Index" class="btn btn-link">← Etkinliklere Dön</a>
        </div>
    </div>
</div>