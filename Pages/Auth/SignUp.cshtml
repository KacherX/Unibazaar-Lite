@page
@model SignUpModel
@{
    ViewData["Title"] = "Sign Up";
    Layout = "_Layout";
}

<div class="d-flex align-items-center justify-content-center" style="min-height: 80vh; background: linear-gradient(135deg, #fdf6e3 0%, #f7d9c4 100%);">
    <div class="card shadow p-4" style="min-width: 350px; max-width: 400px;">
        <div class="text-center mb-4">
            <img src="~/logo.png" alt="UniBazaar Lite Logo" style="width:80px; height:auto; margin-bottom: 10px;" />
            <h2 class="mb-2">Kayıt Ol</h2>
            <p class="text-muted" style="font-size:1rem;">Aramıza katıl, kampüs hayatını kolaylaştır!</p>
        </div>
        <form method="post">
            <div class="mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" autocomplete="username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" type="password" autocomplete="new-password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DisplayName" class="form-label"></label>
                <input asp-for="DisplayName" class="form-control" />
                <span asp-validation-for="DisplayName" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success w-100">Sign Up</button>
        </form>
        <div class="mt-3 text-center">
            <span>Zaten hesabın var mı?</span> <a href="/Auth/SignIn">Sign In</a>
        </div>
    </div>
</div>