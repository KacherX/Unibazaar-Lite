@model IEnumerable<Final.Models.Item>
@{
    ViewData["Title"] = "İlanlar";
    Layout = "_Layout";
}

<div class="text-center my-4">
    <img src="~/logo.png" alt="UniBazaar Lite Logo" style="width:90px; height:auto; margin-bottom: 10px;" />
    <h2 class="display-5 mb-2">İlanlar</h2>
    <p class="lead" style="color:#555;">
        "Kampüsün en güncel ilanları burada! Al, sat, paylaş."
    </p>
</div>

<div class="text-center mb-4">
    <a href="/items/create" class="btn btn-success btn-lg shadow">
        <i class="bi bi-plus-circle"></i> Yeni İlan Oluştur
    </a>
</div>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <a href="/items/details/@item.Id" class="text-decoration-none text-dark">
                <div class="card h-100 shadow-sm border-0">
                    @if (!string.IsNullOrEmpty(item.PhotoPath))
                    {
                        <img src="@item.PhotoPath" class="card-img-top" alt="İlan Fotoğrafı" style="height:180px; object-fit:cover; border-top-left-radius: .5rem; border-top-right-radius: .5rem;">
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text text-muted" style="min-height:60px;">@item.Description</p>
                        <ul class="list-unstyled mb-3">
                            <li><strong>Fiyat:</strong> <span class="text-success">@item.Price ₺</span></li>
                            <li><strong>Satıcı:</strong> @item.Seller</li>
                        </ul>
                        <div class="mt-auto text-end">
                            <span class="badge bg-secondary">Yayın: @item.PostedAt.ToString("dd.MM.yyyy")</span>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    }
</div>
