@page
@model SignInModel
@{
    ViewData["Title"] = "Sign In";
    Layout = "_Layout";
}

<div class="d-flex align-items-center justify-content-center" style="min-height: 80vh; background: linear-gradient(135deg, #e0eafc 0%, #cfdef3 100%);">
    <div class="card shadow p-4" style="min-width: 350px; max-width: 400px;">
        <div class="text-center mb-4">
            <img src="~/logo.png" alt="UniBazaar Lite Logo" style="width:80px; height:auto; margin-bottom: 10px;" />
            <h2 class="mb-2">Giriş Yap</h2>
            <p class="text-muted" style="font-size:1rem;">Topluluğa katıl, fırsatları kaçırma!</p>
        </div>
        <form method="post">
            <div class="mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" autocomplete="username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" type="password" autocomplete="current-password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Sign In</button>
        </form>
        <div class="mt-3 text-center">
            <span>Hesabın yok mu?</span> <a href="/Auth/SignUp">Sign Up</a>
        </div>
    </div>
</div>