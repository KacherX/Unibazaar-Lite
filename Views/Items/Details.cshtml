@model Final.Models.Item
@{
    ViewData["Title"] = "İlan Detayı";
    Layout = "_Layout";
}

<div class="text-center my-4">
    <img src="~/logo.png" alt="UniBazaar Lite Logo" style="width:90px; height:auto; margin-bottom: 10px;" />
    <h2 class="display-5 mb-2">İlan Detayı</h2>
    <p class="lead" style="color:#555;">
        "@Model.Title" ilanının detayları aşağıdadır.
    </p>
</div>

<div class="d-flex justify-content-center mb-5">
    <div class="card shadow-sm border-0" style="max-width: 600px; width: 100%;">
        @if (!string.IsNullOrEmpty(Model.PhotoPath))
        {
            <img src="@Model.PhotoPath" class="card-img-top" alt="İlan Fotoğrafı"
                 style="height:280px; object-fit:cover; border-top-left-radius: .5rem; border-top-right-radius: .5rem;" />
        }
        <div class="card-body d-flex flex-column">
            <h4 class="card-title">@Model.Title</h4>
            <p class="card-text text-muted">@Model.Description</p>
            <ul class="list-unstyled mb-3">
                <li><strong>Fiyat:</strong> <span class="text-success">@Model.Price ₺</span></li>
                <li><strong>Satıcı:</strong> @Model.Seller</li>
                <li><strong>Yayınlanma Tarihi:</strong> @Model.PostedAt.ToString("dd.MM.yyyy")</li>
            </ul>
            <a href="/items" class="btn btn-outline-primary mt-3 w-100">
                ← İlanlara Geri Dön
            </a>
        </div>
    </div>
</div>